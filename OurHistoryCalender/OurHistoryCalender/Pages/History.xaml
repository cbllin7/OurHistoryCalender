<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OurHistoryCalender.Pages.History"
             Title="Days in History">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="cross.png" Clicked="OnCreateClickAsync" Order="Primary"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="listView" ItemSelected="OnItemClickAsync" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding DayInHistoryTitle}" Detail="{Binding DateInHistory}" ImageSource="{Binding DayInHistoryImage}">
                        </ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>